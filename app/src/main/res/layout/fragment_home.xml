<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tabLayouts.HomeFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/home_top_cardview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="32dp">

        <TextView
            android:id="@+id/top_textView"
            android:layout_width="66dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Balance"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/top_textView_price"
            android:layout_width="146dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="38dp"
            android:lineHeight="20sp"
            android:text="$ 500,256.24"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/bottom_textView"
            android:layout_width="82dp"
            android:layout_height="18dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="134dp"
            android:lineHeight="18sp"
            android:text="Monthly Profit"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bottom_textView_price"
            android:layout_width="77dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="152dp"
            android:lineHeight="18sp"
            android:text="$ 9,345.24"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="72dp"
            android:layout_height="30dp"
            android:layout_marginLeft="268dp"
            android:layout_marginTop="142dp"

            android:background="@drawable/search_shape"
            android:backgroundTint="@color/purple_700" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/portofolio_TextView"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:text="My Portofolio"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="272dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/seeAll_TextView"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:text="See All"
        android:textSize="16sp"
        android:textColor="@color/purple_200"
        android:layout_marginTop="272dp"
        android:layout_marginStart="318dp"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/portofolio_left_cardview"
        android:layout_width="180dp"
        android:layout_height="112dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="312dp"
        android:foreground="@drawable/cardview_shape"
        app:cardCornerRadius="24dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/portofolio_right_cardview"
        android:layout_width="180dp"
        android:layout_height="112dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="312dp"
        android:layout_marginStart="208dp"
        android:foreground="@drawable/cardview_shape"
        app:cardCornerRadius="24dp">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/watchlist_TextView"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:text="My Wacthlist"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="456dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/edit_TextView"
        android:layout_width="104dp"
        android:layout_height="24dp"
        android:layout_marginStart="318dp"
        android:layout_marginTop="456dp"
        android:text="Edit"
        android:textColor="@color/purple_200"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_list"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>